<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/origin_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="降噪前"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ns_button1"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/ns_button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="降噪 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ns_button2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origin_button"/>

    <Button
        android:id="@+id/ns_button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="降噪 2"
        app:layout_constraintLeft_toRightOf="@+id/ns_button1"
        app:layout_constraintRight_toLeftOf="@+id/ns_button3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origin_button"/>

    <Button
        android:id="@+id/ns_button3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="降噪 3"
        app:layout_constraintLeft_toRightOf="@+id/ns_button2"
        app:layout_constraintRight_toLeftOf="@+id/ns_button4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origin_button"/>

    <Button
        android:id="@+id/ns_button4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="降噪 4"
        app:layout_constraintLeft_toRightOf="@+id/ns_button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/origin_button"/>

    <TextView
        android:id="@+id/ns_duration_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ns_button1"/>


</android.support.constraint.ConstraintLayout>